  <div id="container">
    <div id='header'>
      <h1>Teratailまとめ</h1>
    </div>
  <div id="categoly">
    <p>カテゴリー</p>
    <ul>
      <li>初心者</li>
      <li>中級者</li>
      <li>上級者</li>
    </ul>
  </div>
  
  <div id="my">
    <div class="mypage">
      <div id = "username">
        <p>ユーザの名前</p>
      </div>
      <div id = "history">
        <canvas width="250" height="175" id="footmark"></canvas>
          <%= javascript_tag do %>
            $("#footmark").click(function() {
            alert("クリックしました");
            return false;
          });
        <% end %>
      </div>

      <br>

  	<div id = "tag">
    <canvas id="pieArea" height="250" width="250"></canvas>
      <script>
      <!-- 円グラフ用データ -->
        var pieData = [
          {
	          value: 70,
	          color:"#CCCCCC",
	          label: "PHP"
	        },
	        {
	          value : 15,
	          color : "#FF0066",
	          label: "Ruby"
	        },
	        {
	          value : 15,
	          color : "#666666",
	          label: "C++"
	        }
	      ];
	    <!-- 円グラフ描画 -->
	    var myPie = new Chart(document.getElementById("pieArea").getContext("2d")).Pie(pieData);
	    </script>
	  </div>
    </div>
  </div>



  <div id="summary">
    <% index = 0 %>
    <% @result_question.zip(@result_answer).each do |question,answer| %>
      <div class="topic">
        <h2 class="title"><%= question["title"] %></h2>
        <p class="tag"><%= question["tags"] %></p>
        <p class="pv">PV:<%= link_to question["count_pv"], "https://teratail.com/questions/"+question["id"].to_s %></p><br>
        <div></div>
        <div class="content">
        <p><span class="index">Question</span><span> by </span><span class="user"><%= question["display_name"] %></span><span><%= simple_format(question["body"]) %></span></p>
         <p><span class="index">Answer</span><span> by </span><span class="user"><%= answer["display_name"] %></span><%= simple_format(answer["body"]) %></p>
        </div>
        </div>
    <% end %>
  </div>
</div>
